#!/bin/bash

# shellcheck disable=SC1091
source /var/hostvn/menu/helpers/function

check_version(){
	username=$(grep "username" "${USER_DIR}/.${domain}.conf" | cut -f2 -d'=')
	cd_dir /home/"${username}"/"${domain}"/public_html/
	clear
	printf "${GREEN}Phien ban WordPress dang su dung: %s ${NC}\n" "$(wp core version --allow-root)"
}

run(){
	select_domain
	#validate_domain ${domain}
	check_is_wordpress ${username} ${domain}
	if [ -z "${ALERT}" ]; then
		check_version
	else
		clear
		printf "${ALERT}\n"
	fi
}

run
echo ""
sleep 2
menu_wp