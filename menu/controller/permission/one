#!/bin/bash

# shellcheck disable=SC1091
source /var/hostvn/menu/helpers/menu
# shellcheck disable=SC1091
source /var/hostvn/menu/helpers/variable_common
# shellcheck disable=SC1091
source /var/hostvn/menu/helpers/function

echo "========================================================================="
echo "Phân quyền Chown/Chmod"
echo "========================================================================="
echo

action(){
   read -r -p "Xác nhận phân lại quyền cho domain: ${domain}? (y/n): " confirm

    if [[ "$confirm" =~ ^([yY])$ ]]; then
        username=$(grep "username" "${USER_DIR}/.${domain}.conf" | cut -f2 -d'=');
        path="/home/${username}"
        if [[ -d "${path}" ]]; then
            chmod 711 /home/"${username}"
            chmod 711 /home/"${username}"/"${domain}"
            chmod 711 /home/"${username}"/"${domain}"/logs
            chmod 755 /home/"${username}"/"${domain}"/public_html
            chown -R "${username}":"${username}" /home/"${username}"
            echo "-------------------------------------------------------------------------"
            echo "Đã phân lại quyền cho domain: ${domain}"
            sleep 2
            echo "Đang quay lại menu..."
            sleep 2
            menu_primary
        else
            echo
            echo "Domain không tồn tại trên VPS"
            menu_permission
        fi
    else
        echo
        menu_permission
    fi
}

select_domain
check_domain_exists
action